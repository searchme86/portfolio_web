{
  "compilerOptions": {
    "baseUrl": "src",
    "strict": true,
    "strictNullChecks": true,
    "lib": ["es2019", "ESNext", "DOM"],
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules, **/node_modules/**, node_modules/**/*"]
}
